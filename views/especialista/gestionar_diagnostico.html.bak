{{extend 'layout.html'}}

<h3 class="wow fadeInLeft">{{=mensaje}} </h3>

<hr />

{{if diagnostico:}}
    <div class="col-md-7">
        {{=grid}}
    </div>
    <div class="col-md-5">
        <section class="wow fadeInUp">
            {{def activo(flag):
                if flag:
                    return CAT(A(XML('<ico class="glyphicon glyphicon-ok"></ico>'), T("Activo")), _class="success")
                else:
                    return CAT(A(XML('<ico class="glyphicon glyphicon-remove"></ico>'), T("Activo")))
                pass              
            }}
            <!--Card-->
            <div class="card" style="padding: 10px;">
                <!--Card image-->
                <div class="view overlay hm-white-slight">
                    <div class="row">
                        <div class="col-md-10 col-md-offset-2">
                            <!--Title-->
                            <h4 class="card-title">{{=diagnostico.titulo}}</h4>
                            <!--Text-->
                            <p class="card-text">{{=diagnostico.descripcion}}</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            {{=H6(CAT(T("Cuestionario diagnóstico:"), ' ', A(tipo_diagnostico[diagnostico.tipo])))}}
                        </div>
                        <div class="col-md-6">
                            {{=H6(CAT(activo(diagnostico.activo)))}}
                        </div>
                    </div>
                </div>
                <!--/.Card image-->

                <!--Card content-->
                <div class="card-block text-xs-center">
                    {{=LOAD('especialista', 'get_pregunta.load', args=[diagnostico.id, 0])}}
                    {{=LOAD('especialista', 'get_pregunta.load', args=[diagnostico.id, 1])}}
                    {{=LOAD('especialista', 'get_pregunta.load', args=[diagnostico.id, 2])}}
                    {{=LOAD('especialista', 'get_pregunta.load', args=[diagnostico.id, 3])}}
                    {{=LOAD('especialista', 'get_pregunta.load', args=[diagnostico.id, 4])}}
                    {{=LOAD('especialista', 'get_pregunta.load', args=[diagnostico.id, 5])}}
                    {{=LOAD('especialista', 'get_pregunta.load', args=[diagnostico.id, 6])}}
                    
                    <div class="row">
                        <div class="col-md-12">
                            <hr />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-9 col-md-offset-3">
                            {{=H5(CAT(T("Evaluación de Diagnóstico: "), 0, ' ', T("ptos")))}}
                        </div>
                    </div>
                </div>
                <!--/.Card content-->

            </div>
            <!--/.Card-->

            <div class="row">
                <div class="col-md-12">
                    <hr />
                </div>
            </div>
        </section>
    </div>
{{else:}}
    <div class="col-md-12">
        {{=grid}}
    </div>
{{pass}}

{{block head}}
    <style>
        .pregunta > li {
            color: rgba(149, 67, 6, 0.73);
        }

        .respuesta > li {
            color: rgba(84, 147, 26, 0.91);
        }

        .card-title {
            color: #504040!important;
        }
        
        .respuesta > li > input {
            height: 25px!important;
        }

    </style>
{{end}}

{{block page_js}}
    <script type="text/javascript">
      $(document).ready(function () {
        $('[data-toggle="tooltip"]').tooltip();
      });
    </script>
{{end}}
